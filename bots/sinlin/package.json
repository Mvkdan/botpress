{
  "name": "@bp-bots/sinlin",
  "description": "A bot that syncs issues from Linear to Botpress tables",
  "scripts": {
    "postinstall": "genenv -o ./.genenv/index.ts -e TELEGRAM_BOT_TOKEN -e LINEAR_API_KEY -e LINEAR_WEBHOOK_SIGNING_SECRET",
    "check:type": "tsc --noEmit",
    "build": "bp build",
    "add:integrations": "bp add ../../integrations/linear -y && bp add ../../integrations/telegram -y"
  },
  "private": true,
  "dependencies": {
    "@botpress/client": "workspace:*",
    "@botpress/sdk": "workspace:*",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@botpress/cli": "workspace:*",
    "@bpinternal/genenv": "0.0.1",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.17",
    "execa": "^8.0.1",
    "typescript": "^4.9.4"
  }
}
