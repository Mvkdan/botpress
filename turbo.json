{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "@botpress/client#generate": {
      "outputs": ["src/gen/**"]
    },
    "@botpress/client#build": {
      "inputs": ["src/**", "build.ts"],
      "outputs": ["dist/**"],
      "dependsOn": ["@botpress/client#generate"]
    },
    "@botpress/chat#build": {
      "inputs": ["src/**"],
      "outputs": ["dist/**"],
      "dependsOn": ["@botpress/chat#generate"]
    },
    "@botpress/sdk#build": {
      "inputs": ["src/**", "build.ts"],
      "outputs": ["dist/**"],
      "dependsOn": ["@botpress/client#build"]
    },
    "@botpress/cli#build": {
      "outputs": ["dist/**", "templates/*/.botpress"],
      "dependsOn": ["@botpress/client#build", "@botpress/sdk#build"]
    },
    "generate": {
      "outputs": ["src/gen/**"],
      "dependsOn": ["@botpress/cli#build", "^generate"]
    },
    "build": {
      "outputs": ["bp_modules/**", ".botpress/**"],
      "dependsOn": ["@botpress/cli#build", "^build"]
    },
    "check:type": {},
    "check:bplint": {}
  }
}
